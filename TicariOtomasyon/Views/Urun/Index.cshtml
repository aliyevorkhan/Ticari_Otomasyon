@using TicariOtomasyon.Models.Siniflar
@model List<Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 style="margin-top:20px">ÜRÜNLER</h2>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
    @*        <th>Ürün ID</th>*@
            <th>Adı</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Alış Fiyat</th>
            <th>Satış Fiyat</th>
            <th>Durum</th>
            <th>Kategori</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    @foreach (var m in Model)
    {
        <tr>

            @*<td>@m.UrunID</td>*@
            <td>@m.UrunAd</td>
            <td>@m.Marka</td>
            <td>@m.Stok</td>
            <td>@m.AlisFiyat</td>
            <td>@m.SatisFiyat</td>
            <td>@m.Durum</td>
            <td>@m.Kategori.KategoriAd</td>
            <td><img src=" @m.UrunGorsel"/></td>
            <td>
                <a href="/Urun/UrunSil/@m.UrunID" class="btn btn-danger"><i class="fa fa-trash"></i> Sil</a>
                <a href="/Urun/UrunGetir/@m.UrunID" class="btn btn-warning"><i class="fa fa-undo"></i> Güncelle</a>
            </td>
        </tr>

    }
</table>
<br />
<br />

<a href="/Urun/UrunEkle" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni Ürün Ekle</a>
<a href="/Urun/UrunListesi" class="btn btn-info"><i class="fa fa-print"></i> Yazdır</a>

<link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>

<script>
    $('#tbl1').dataTable({});

</script>