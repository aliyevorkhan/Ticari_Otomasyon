@model TicariOtomasyon.Models.Siniflar.Urun

@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Ürün Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("UrunGuncelle", "Urun", FormMethod.Post))
{
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Ürün Adı:")
            @Html.TextBoxFor(x => x.UrunAd, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Marka:")
            @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Stok")
            @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Alış Fiyatı:")
            @Html.TextBoxFor(x => x.AlisFiyat, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Satış Fiyatı:")
            @Html.TextBoxFor(x => x.SatisFiyat, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Kategori:")
            @Html.DropDownListFor(x => x.KategoriID, (List<SelectListItem>)ViewBag.ktgr, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Ürün Görseli:")
            @Html.TextBoxFor(x => x.UrunGorsel, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(x => x.UrunID)
    <button class="btn btn-info"><i class="fa fa-plus"></i> Ekle</button>
}

<br />

