@model TicariOtomasyon.Models.Siniflar.Urun
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2 style="text-align:center">Ürün Ekleme Sayfası</h2>
<br />

<form class="form" action="/Urun/UrunEkle" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Ürün Adı:")
            @Html.TextBoxFor(x => x.UrunAd, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Marka:")
            @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Stok")
            @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Alış Fiyatı:")
            @Html.TextBoxFor(x => x.AlisFiyat, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Satış Fiyatı:")
            @Html.TextBoxFor(x => x.SatisFiyat, new { @class = "form-control"})
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Kategori:")
            @Html.DropDownListFor(x => x.KategoriID, (List<SelectListItem>)ViewBag.ktgr, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Ürün Görseli:")
            <div class="file-upload-wrapper">
                <input type="file" class="form-control-file" name="UrunGorsel" />
            </div>
        </div>
    </div>
    <br />
    <button class="btn btn-info"><i class="fa fa-plus"></i> Ekle</button>

</form>
