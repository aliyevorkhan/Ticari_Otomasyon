@using TicariOtomasyon.Models.Siniflar
@model List<Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 style="margin-top:20px">KATEGORİLER</h2>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>

    @foreach (var m in Model)
    {
        <tr>

            <td>@m.KategoriAd</td>
            <td>
                <a href="/Kategori/KategoriSil/@m.KategoriID" class="btn btn-danger"><i class="fa fa-trash"></i> Sil</a>
                <a href="/Kategori/KategoriGetir/@m.KategoriID" class="btn btn-warning"><i class="fa fa-undo"></i> Güncelle</a>
            </td>
        </tr>

    }
</table>
<br />
<br />
<a href="/Kategori/KategoriEkle" class="btn btn-primary"><i class="fa fa-plus"></i> Kategori Ekle</a>
<a href="/Kategori/KategoriListesi" class="btn btn-info"><i class="fa fa-print"></i> Yazdır</a>

<link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>

<script>
    $('#tbl1').dataTable({});

</script>