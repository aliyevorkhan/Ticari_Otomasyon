@using TicariOtomasyon.Models.Siniflar
@model List<SatisHaraket>
@{
    ViewBag.Title = "SatisGecmisi";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<h2>Departman Personel Satis</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı: @ViewBag.cari</li>
</ol>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Personel</th>
        <th>Ürün</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        <th>Tarih</th>


    </tr>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.SatisID</td>
            <td>@m.Personel.PersonelAd @m.Personel.PersonelSoyad</td>
            <td>@m.Urun.UrunAd</td>
            <td>@m.Adet</td>
            <td>@m.Fiyat</td>
            <td>@m.ToplamTutar</td>
            <td>@m.Tarih.ToShortDateString()</td>

        </tr>
    }
</table>