@using TicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<h2 style="margin-top:20px">CARİLER</h2>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Şehir</th>
            <th>E-posta</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    @foreach (var m in Model)
    {
        <tr>

            <td>@m.CariID</td>
            <td>@m.CariAd</td>
            <td>@m.CariSoyad</td>
            <td>@m.CariSehir</td>
            <td>@m.CariMail</td>
            <td>
                <a href="/Cari/CariSil/@m.CariID" class="btn btn-danger"><i class="fa fa-trash"></i> Sil</a>
                <a href="/Cari/CariGetir/@m.CariID" class="btn btn-warning"><i class="fa fa-undo"></i> Güncelle</a>
                <a href="/Cari/SatisGecmisi/@m.CariID" class="btn btn-info"><i class="fa fa-history"></i> Satış Geçmişi</a>
            </td>
        </tr>

    }
</table>
<br />
<br />

<a href="/Cari/CariEkle" class="btn btn-primary"><i class="fa fa-plus"></i> Cari Ekle</a>
<a href="/Cari/CariListesi" class="btn btn-info"><i class="fa fa-print"></i> Yazdır</a>

<link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>

<script>
    $('#tbl1').dataTable({});

</script>